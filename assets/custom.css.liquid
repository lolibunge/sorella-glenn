.template-index .home-hero__text-img.feature-row--1576686985247 {
    justify-content: space-around;
}

.template-index .home-hero__text-img__text {
    flex: unset!important;
    justify-content: unset!important;
    width: 20%;
}

.template-index .home-hero__text-img__img {
    flex: unset!important;
  position:unset;
