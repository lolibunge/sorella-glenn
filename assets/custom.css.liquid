}

.template-index .home-hero__text-img__img:after {
    padding-top: 0!important;
  min-height:0!important;
}

.template-index .home-hero__text-img__text > div {
    max-width: 550px;
  width:100%;
}

.template-index .home-hero__text-img__img {
    background-position: center;
    max-width: 1200px;
    background-size: cover;
  background-repeat:no-repeat;
  height:auto;
}

/* custom hero image - 26/01/23 */
  .mobile{
    display:none;
  }

  .desktop{
    display:block;
  }

  .custom-hero__text-img {
    background-color: rgba(244, 239, 234, 0.39);
  }
  .custom-hero__text-img__text {
    position: absolute;
    transform: translateY(-50%);
    left: 5%;
    width: 670px;
  }

 

  .custom-hero__text-img__img {
    height: 960px;
    width: 100%;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }

  .custom-hero__text-img.feature-row--1638800539e7f7ca84 {
    position: relative;
  }

  .custom-hero__text-img__text-p {
    width: 100%;
    margin: auto;
    margin-top:40px;
  }

  h2.h1-style.no-margin {
    text-align: {{ section.settings.title_alignment }};
  }

  .custom-hero__text-img__text-p p {
    text-align: {{ section.settings.description_alignment }};
  }

  .collections-link.home {
    {% if section.settings.button_alignment == 'left' %}
    margin-left: 0;
    {% elsif section.settings.button_alignment == 'center'%}
    margin: auto;
    {% elsif section.settings.button_alignment == 'right'%}
    margin: auto;
    margin-right: 0!important;
    {% endif %}
  }
  
  @media screen and (min-width:2560px){
    
    .custom-hero__text-img__img {
      height: 1070px;
      background-size: cover;
    }
    .custom-hero__text-img__text {
      width: 960px;
    }
    .custom-hero__text-img__text h2{
      font-size: 4.5rem;
    }
    
    .custom-hero__text-img__text-p p {
       font-size: 1.5rem;
      line-height: 1.5;
    }
    
    .custom-hero__text-img__text .collections-link.home{
      font-size:1rem;
    }
    .custom-hero__text-img__img {
      height: 1700px;
    }
  }


  
  @media screen and (max-width:1024px){

    .custom-hero__text-img__text {
      left: 5%;
    }
    .custom-hero__text-img__img {
      height: 683px;
    }
    .custom-hero__text-img__text h2{
      font-size:3.5rem;
    }
    
    .custom-hero__text-img__text-p p {
      font-size: 1rem;
      line-height: 1.5;
    }


  }
  
  @media screen and (max-width:768px){
    
    .custom-hero__text-img__text {
          width: 450px;
    }
    
    .custom-hero__text-img__img {
      height: 320px;
    }
    
  }

  @media screen and (max-width:480px){

    .mobile{
      display:block;
    }

    .desktop{
      display:none;
    }


    .custom-hero__text-img.feature-row--1638800539e7f7ca84 {
      position: relative;
      height: fit-content;
    }

    .custom-hero__text-img__img.mobile {
      height: unset;
    }

    .custom-hero__text-img__text {
      position: unset;
      top: 20%;
      transform: unset;
      left: 5%;
      width: 370px!important;
    }

    .custom-hero__text-img__text {
      left: 0%;
      width: unset;
      margin: auto;
      padding: 40px 0;
    }

    h2.h1-style.no-margin{
      font-size: 2.5rem;
    }
    .custom-hero__text-img__text-p {
      margin: auto ;
      margin-top:20px;
    }

    .collections-link.home:after {
      content: '';
      display: block;
      width: 100%;
      height: 2px;
      background-color: #009A78;
    }
  }


