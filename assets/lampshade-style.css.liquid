/* HEADER */
main#main {
    max-width: unset;
    width: 100%;
}
.shopify-section {
    max-width: 1440px;
    margin: auto;
}
header.lampshade-header {
    position: absolute;
    width: 100%;
    margin: auto;
    top: 0;
    left: 0;
    right: 0;
}
div#lampshade-header__container {
    position: absolute;
    left: 0;
    right: 0;
    margin: auto;
    text-align: center;
    width:fit-content;
}

div#shopify-section-lampshade-header {
    position: absolute;
    top: 0;
    z-index: 8;
    width: 100%;
    margin: auto;
    right: 0;
    left: 0;
}
div#Lampshade-header__container {
    position: absolute;
    z-index: 9;
    left: 0;
    right: 0;
    margin: auto;
    text-align: center;
}
.lampshade-header .home-hero__text-img__img {
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
}
.lampshade-header nav#navBar {
    background: unset;
}

.lampshade-header nav#navBar .wrapper {
    display: flex;
    width: 100%;
    column-gap: 94px;
}

.lampshade-header nav#navBar .wrapper:after {
    display: none;
}

.lampshade-header .lampshade-header__nav-container-left a {
    color: var(--cream, #F2EEE8);
    font-family: Raleway;
    font-size: 12px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    letter-spacing: 2.4px;
    padding: 0 8px 8px 8px;
}

.lampshade-header .lampshade-header__nav-container-left {
    border-bottom: 1px solid #F38E69;
}

.lampshade-header nav#navBar .wrapper a {
    color: var(--cream, #F2EEE8);
    font-family: Raleway;
    font-size: 12px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    letter-spacing: 2.4px;
    text-transform: uppercase;
}
/* ------ */

/* FOOTER */
#lampshade-footer div#lampshade-footer__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
#lampshade-footer div#lampshade-footer__logo,
#lampshade-footer div#lampshade-footer__text,
#lampshade-footer div#lampshade-footer__menu {
    padding: 40px;
}
#lampshade-footer div#lampshade-footer__logo {
    display: flex;
    align-content: center;
    justify-content: center;
    align-items: center;
    position: relative;
}
#lampshade-footer div#lampshade-footer__logo:first-child:after {
    content: '';
    position: absolute;
    right: 0;
    height: 80%;
    border-right: 1px solid #F38E69;
}
#lampshade-footer .lampshade-footer__address {
    font-size: 16px;
    font-family: 'Raleway';
    text-transform: uppercase;
    color: #fff;
    font-weight: 600;
    margin-bottom: 30px;
}

#lampshade-footer .lampshade-footer__richtext {
    font-size: 12px;
    color: #fff;
    font-family: 'Raleway';
}
#lampshade-footer .lampshade-footer__custom-order {
    color: var(--salmon, #F38E69);
    font-family: Raleway;
    font-size: 12px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    letter-spacing: 2.4px;
    padding: 0 12px 12px 12px;
    border-bottom: 1px solid;
    width: fit-content;
    margin-bottom: 44px;}

#lampshade-footer ul#lampshade-footer__menus__help {
    margin: 0;
}

#lampshade-footer ul#lampshade-footer__menus__help a {
    color: #fff;
    text-transform: uppercase;
    font-weight: 700;
    font-size: 12px;
    letter-spacing: 2.4px;
}

#lampshade-footer ul#lampshade-footer__menus__help li {
    list-style-type: none;
    margin: 0;
}
/* ------ */

/* Collection Rows */

.rebl-collections-rows__container .product-grid-item__shop-button a {
    color: var(--blue, #006573);
    text-align: center;
    font-family: Raleway;
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: 36px; /* 180% */
    letter-spacing: 4.8px;
    text-transform: uppercase;
    border: 1px solid #006580;
    padding: 5px 16px;
}
.rebl-collections-rows__container .section-header.home-collections__title h2 {
    color: var(--green, #00945E);
    text-align: center;
    font-family: Brand;
    font-size: 64px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: 12.8px;
    text-transform: uppercase;
}

.rebl-collections-rows__container h3.product-grid-item__title {
    color: var(--green, #00945E);
    text-align: center;
    font-family: MinervaModern;
    font-size: 28px;
    font-style: normal;
    font-weight: 450;
    line-height: 36px; 
    letter-spacing: 5.6px;
    text-transform: uppercase;
}

.rebl-collections-rows__container a.h3-style.collections-link {
    color: var(--salmon, #F38E69);
    text-align: center;
    font-family: Raleway;
    font-size: 16px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    letter-spacing: 3.2px;
}
.rebl-collections-rows__container a.h3-style.collections-link:after {
  margin-top: 8px;
  background-color: #F38E69;
}

.rebl-collections-rows__container .home-collections__link {
    padding: 0 0 80px;
}

.rebl-collections-rows__container .section-header.home-collections__title {
    padding: 100px 0 0;
}

.rebl-collections-rows__container .lazyload__image-wrapper__div {
    padding-top: 100%;
}
.rebl-collections-rows__container .grid-uniform.row-negative-bottom {
    max-width: 1200px;
    margin: auto;
    display: flex;
    column-gap: 70px;
    margin: auto;
    text-align: center;
}

.rebl-collections-rows__container .grid-item {
    float: unset;
    padding: 0;
}

.rebl-collections-rows__container .product-grid-item__shop-button {
    margin-top: 24px;
}
/* -------------------- */

/* Our Mission */
.rebl-our-mission .rebl-our-mission__text-container h2 {
    color:{{ section.settings.heading-color }};
    font-family: Brand;
    font-size: 64px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: 12.8px;
    text-transform: uppercase;
}

.rebl-our-mission .rebl-our-mission__text-container p {
    color:{{ section.settings.text-color }};
    text-align: center;
    font-family: Raleway;
    font-size: 24px;
    font-style: normal;
    font-weight: 500;
    line-height: 36px;
    letter-spacing: 2.4px;
}
.rebl-our-mission {
    max-width: 846px;
    margin: auto;
    text-align: center;
    margin: 144px auto;
}
.rebl-our-mission:after {
    content: '';
    position: absolute;
    width: 630px;
    height: 1px;
    background: #00945E;
    left: 0;
    right: 0;
    margin: 68px auto;
}
/* ----------- */

/* Image With Text */
.rebl-image-with-text {
    display: flex;
}
.rebl-image-with-text > div{
    width: 50%;
}
.rebl-image-with-text .rebl-image-with-text__img-container {
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    height: 518px;
}
.rebl-image-with-text .rebl-image-with-text__text-container {
    padding: 90px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
/* --------------- */

@media screen and (max-width:768px){

    /* MENU MOBILE */
    nav#navBar .wrapper {
        flex-direction: column;
        row-gap: 20px;
    }
    
    nav#navBar {
        background-color: #0B6A83!important;
        flex-direction: column;
        row-gap: 20px;
    }
    
    nav#navBar .wrapper a {
        font-size: 20px;
        padding: 0 40px;
    }
    .lampshade-header__nav-container .nav-bar {
        height: 100vh;
        padding: 0 0 40px;
        justify-content: flex-start;
    }
    /* ---------- */

    .rebl-collections-rows__container .grid-uniform.row-negative-bottom {
        flex-direction: column;
        padding: 40px;
    }

    .rebl-image-with-text {flex-direction: column!important;}

    div#lampshade-footer__container {
        flex-direction: column;
    }

    .rebl-our-mission:after {
        width: 100%;
    }

    .rebl-image-with-text > div {
        width: 100%;
        padding:40px!important;
    }

    .rebl-image-with-text__text-container {
        padding: 40px;
    }

    .rebl-collections-rows__container .grid-item {
        width: 100%;
    }

    div#lampshade-footer__text {
        width: 100%!important;
    }

    div#lampshade-footer__menu {
        width: 100%!important;
    }

    div#lampshade-footer__logo {
        width: 100%!important;
    }

    div#lampshade-footer__logo:first-child:after {
        display: none;
    }

    .rebl-collections-rows__container {
        padding: 40px;
    }

    .rebl-collections-rows__container .section-header.home-collections__title h2 {
        font-size: 43px;
    }

    .rebl-collections-rows__container .home-collections__link {padding-bottom: 40px;}

    .rebl-collections-rows__container .section-header.home-collections__title {
        padding-top: 40px;
    }
}