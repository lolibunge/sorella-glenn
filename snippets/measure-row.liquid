{% comment %}
  
  SNIPPET used for intros

{% endcomment %}

<div class="measure__row">
	<div class="measure__row__img">
		{%- if block.settings.infographic != blank -%}
            <span>{{ block.settings.infographic | img_url: 'master', scale: 2 | img_tag: block.settings.infographic.alt }}</span>

          {%- endif -%}
	</div>
	<div class="measure__row__text">
		 <img src="{{ 'green-check-mark.svg' | asset_url }}" alt="" class="measure__row__check-mark"/>
		<div class="measure__row__text-div">
			<h2 class="h3-minerva">{{ block.settings.measurementTitle }}</h2>
			{{ block.settings.measurementIntro-text-copy }}
		</div>
	</div>
</div>