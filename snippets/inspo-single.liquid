{% comment %}
  
  SNIPPET used for Inspo single image

{% endcomment %}

<div class="inspo__single">
	{%- if block.settings.singleLink != blank -%}
		<a href="{{ block.settings.singleLink }}">
	{%- endif -%}
	<div class="inspo__single__img">
		{%- if block.settings.singleImage != blank -%}
            {{ block.settings.singleImage | img_url: 'master', scale: 2 | img_tag: block.settings.singleImage.alt }}
         {%- endif -%}
	</div>
	<div class="inspo__text">
		<h2 class="h3-raleway">{{ block.settings.singleTitle }}</h2>
	</div>
	{%- if block.settings.singleLink != blank -%}
		</a>
	{%- endif -%}
</div>

